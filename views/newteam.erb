   <label for="shooting_guard">Shooting Guard:</label>
   <p><input type="text" name="sg" id="sg" /></p>

   <label for="power_forward">Power Forward:</label>
   <p><input type="text" name="pf" id="pf" /></p>

   <label for="power_forward">Small Forward:</label>
   <p><input type="text" name="sf" id="sf" /></p>

